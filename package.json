{
  "name": "@yellfage/wst-client-js",
  "version": "1.0.0",
  "author": "Yellfage",
  "description": "WST JavaScript Client",
  "main": "dist/index.js",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all clear:dist compile:prod create:declarations",
    "compile:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js",
    "create:declarations": "tsc --project ./tsconfig.json --outDir './dist' --emitDeclarationOnly",
    "clear:dist": "rimraf -rf ./dist/*",
    "commit": "commit",
    "eslint": "eslint --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx",
    "eslint:src": "npm run eslint ./src",
    "eslint:src:fix": "npm run eslint:src -- -- --fix",
    "prepublishOnly": "npm-run-all eslint:src:fix build"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/prompt-cli": "^13.1.0",
    "@types/ws": "^7.4.7",
    "@yellfage/eslint-config": "^1.0.0",
    "@yellfage/eslint-config-typescript": "^1.0.0",
    "commitlint": "^13.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "delay": "^5.0.0",
    "isomorphic-ws": "^4.0.1",
    "nanoid": "^3.1.25",
    "ws": "^8.2.0"
  }
}
