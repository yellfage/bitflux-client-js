{
  "include": ["./src"],
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "node",
    "importsNotUsedAsValues": "preserve",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist"
  }
}
