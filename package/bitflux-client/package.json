{
  "name": "@yellfage/bitflux-client",
  "version": "1.0.0-beta.1",
  "author": "Yellfage",
  "description": "Bitflux JavaScript Client",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clear:dist compile:prod create:declarations",
    "compile:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js",
    "create:declarations": "tsc --project ./tsconfig.json --outDir './dist' --emitDeclarationOnly",
    "clear:dist": "rimraf -rf ./dist/*",
    "eslint:src": "eslint ./src --ext .js,.ts --ignore-path=../../.eslintignore --report-unused-disable-directives",
    "eslint:src:fix": "npm run eslint:src -- --fix",
    "prepublishOnly": "npm-run-all eslint:src:fix build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yellfage/bitflux-client-js.git",
    "directory": "package/bitflux-client"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@yellfage/event-emitter": "^1.0.0-beta.1",
    "abort-controller": "^3.0.0",
    "core-js": "^3.21.0",
    "delay": "^5.0.0",
    "nanoid": "^3.3.0"
  }
}
