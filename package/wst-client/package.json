{
  "name": "@yellfage/wst-client",
  "version": "1.0.0",
  "author": "Yellfage",
  "description": "WST JavaScript Client",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clear:dist compile:prod create:declarations",
    "compile:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js",
    "create:declarations": "tsc --project ./tsconfig.json --outDir './dist' --emitDeclarationOnly",
    "clear:dist": "rimraf -rf ./dist/*",
    "eslint:src": "eslint ./src --ext .js,.ts --ignore-path=../../.eslintignore --report-unused-disable-directives",
    "eslint:src:fix": "npm run eslint:src -- --fix",
    "prepublishOnly": "npm-run-all eslint:src:fix build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yellfage/wst-client-js.git",
    "directory": "package/wst-client"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@yellfage/event-emitter": "^1.0.0",
    "abort-controller": "^3.0.0",
    "core-js": "^3.19.0",
    "delay": "^5.0.0",
    "nanoid": "^3.1.30"
  }
}
